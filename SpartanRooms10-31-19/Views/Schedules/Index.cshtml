@model IEnumerable<SpartanRoomsData.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}
    <div class="container-fluid fitTo100" style="position: absolute ; height: 100% ; background-color: #f3cb7a">
        <h1>Class Catalog</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table" style="background-color: white; border-radius: 10px">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
